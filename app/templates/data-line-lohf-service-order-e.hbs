      label=(t "forms.data-line-lohf-service-order-e.modifier_id.login-caption")
      data-test-data-line-lohf-service-order-e------------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "modifier_id.login" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.customer_id-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.customer_id
      relationName="customer_id"
      projection="customerL"
      title=(t "forms.data-line-lohf-service-order-e.customer_id-caption")
      readonly=readonly
      componentName="customer_idLookup"
      data-test-data-line-lohf-service-order-e------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "customer_id" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.customer_id.customer
      class=(if (v-get validationObject "customer_id.customer" "isInvalid") "error")
      label=(t "forms.data-line-lohf-service-order-e.customer_id.customer-caption")
      data-test-data-line-lohf-service-order-e---------------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "customer_id.customer" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.contragent_id-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.contragent_id
      relationName="contragent_id"
      projection="contragentL"
      title=(t "forms.data-line-lohf-service-order-e.contragent_id-caption")
      readonly=readonly
      componentName="contragent_idLookup"
      data-test-data-line-lohf-service-order-e--------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "contragent_id" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=true
