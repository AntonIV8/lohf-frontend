      label=(t "forms.data-line-lohf-service-order-e.contragent_id.contragent-caption")
      data-test-data-line-lohf-service-order-e-------------------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "contragent_id.contragent" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.creator_id-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.creator_id
      relationName="creator_id"
      projection="usrL"
      title=(t "forms.data-line-lohf-service-order-e.creator_id-caption")
      readonly=readonly
      componentName="creator_idLookup"
      data-test-data-line-lohf-service-order-e-----------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "creator_id" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.creator_id.login
      class=(if (v-get validationObject "creator_id.login" "isInvalid") "error")
      label=(t "forms.data-line-lohf-service-order-e.creator_id.login-caption")
      data-test-data-line-lohf-service-order-e-----------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "creator_id.login" "messages")}}
  </div>
</form>