<h3 class="ui header">{{t "forms.data-line-lohf-service-order-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.description
      class=(if (v-get validationObject "description" "isInvalid") "error")
      label=(t "forms.data-line-lohf-service-order-e.description-caption")
      data-test-data-line-lohf-service-order-e------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "description" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.dt_completed-caption"}}</label>
    {{
      flexberry-simpledatetime
      type="date"
      placeholder=(t 'components.flexberry-datepicker.placeholder')
      readonly=readonly
      value=model.dt_completed
      class=(if (v-get validationObject "dt_completed" "isInvalid") "error")
      data-test-data-line-lohf-service-order-e-------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "dt_completed" "messages")}}
  </div>

  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.dt_created-caption"}}</label>
    {{
      flexberry-simpledatetime
      type="date"
      placeholder=(t 'components.flexberry-datepicker.placeholder')
      readonly=readonly
      value=model.dt_created
      class=(if (v-get validationObject "dt_created" "isInvalid") "error")
      data-test-data-line-lohf-service-order-e-----------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "dt_created" "messages")}}
  </div>

  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.dt_modified-caption"}}</label>
    {{
      flexberry-simpledatetime
      type="date"
      placeholder=(t 'components.flexberry-datepicker.placeholder')
      readonly=readonly
      value=model.dt_modified
      class=(if (v-get validationObject "dt_modified" "isInvalid") "error")
      data-test-data-line-lohf-service-order-e------------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "dt_modified" "messages")}}
  </div>

  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.dt_started-caption"}}</label>
    {{
      flexberry-simpledatetime
      type="date"
      placeholder=(t 'components.flexberry-datepicker.placeholder')
      readonly=readonly
      value=model.dt_started
      class=(if (v-get validationObject "dt_started" "isInvalid") "error")
      data-test-data-line-lohf-service-order-e-----------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "dt_started" "messages")}}
  </div>

  <div class="field" data-test-data-line-lohf-service-order-e------------="true">
    <label>{{t "forms.data-line-lohf-service-order-e.external_id-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "guid")
      value=model.external_id
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationObject "external_id" "messages")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.price
      class=(if (v-get validationObject "price" "isInvalid") "error")
      label=(t "forms.data-line-lohf-service-order-e.price-caption")
      data-test-data-line-lohf-service-order-e------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "price" "messages")}}
  </div>
  <div class="field">
    <label>{{t "forms.data-line-lohf-service-order-e.state-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.state
      relationName="state"
      projection="order_stateL"
      title=(t "forms.data-line-lohf-service-order-e.state-caption")
      readonly=readonly
      componentName="stateLookup"
      data-test-data-line-lohf-service-order-e------=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "state" "messages")}}
  </div>

  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.state.description
      class=(if (v-get validationObject "state.description" "isInvalid") "error")
      label=(t "forms.data-line-lohf-service-order-e.state.description-caption")
